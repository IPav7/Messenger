<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backsign"
    tools:context="com.igorpavinich.messenger.SignUp_Activity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/signup_image"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_person"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:layout_above="@+id/signup_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/signup_layout"
        android:orientation="vertical"
        android:layout_centerInParent="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signup_name"
                android:id="@+id/signup_name"
                android:background="@drawable/rectedittext"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signup_surname"
                android:id="@+id/signup_surname"
                android:background="@drawable/rectedittext"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signin_username"
                android:id="@+id/signup_username"
                android:background="@drawable/rectedittext"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signin_password"
                android:id="@+id/signup_password"
                android:background="@drawable/rectedittext"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:gravity="center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/cpb_white"
            android:background="@drawable/rectbutton"
            android:id="@+id/signup_bSignUp"
            android:text="@string/signin_signup"/>
    </LinearLayout>

    <TextView
        android:layout_below="@+id/signup_layout"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/cpb_white"
        android:id="@+id/textSignIn"
        android:text="@string/signin_signin"/>

</RelativeLayout>
